<Application x:Class="BotwActorToolUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BotwActorToolUI">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="Tajawal">pack://application:,,,/Fonts/#Tajawal</FontFamily>
            <FontFamily x:Key="Windows">pack://application:,,,/Fonts/#Windowcharacters</FontFamily>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:Bootstrapper x:Key="Bootstrapper"/>
                </ResourceDictionary>
                
                <ResourceDictionary Source="ViewThemes/Theme.xaml"/>
                <ResourceDictionary Source="ViewThemes/ObjectTabStyles.xaml"/>
                <ResourceDictionary Source="ViewThemes/ObjectPageStyles.xaml"/>
                <ResourceDictionary Source="ViewThemes/ChromeButtonsStyles.xaml"/>
                <ResourceDictionary Source="ViewThemes/MenuStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
